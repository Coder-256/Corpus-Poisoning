   "source": [
    "import glob\n",
    "import bz2"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "paths = glob.glob(\"enwiki-cleaned/*/wiki_*.bz2\", recursive=True)\n",
    "with open(\"enwiki-cleaned.txt\", \"a\") as output:\n",
    "    for path in paths:\n",
    "        with bz2.open(path, \"rt\") as bzinput:\n",
    "            text = bzinput.read()\n",
    "            output.write(text)"
   ]
  }
